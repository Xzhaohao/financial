<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 下边线 -->
    <style name="default_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/bottom_line</item>
    </style>

    <!-- primary按钮 -->
    <style name="primary_button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Home 小菜单 -->
    <style name="main_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blackText3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 输入框 -->
    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">66dp</item>
        <item name="android:layout_marginEnd">66dp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textColorHint">@color/black_tag</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- RoundButton -->
    <style name="round_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/project_num_red</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- ActionBar标题 -->
    <style name="action_bar_title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ActionBar返回图标 -->
    <style name="action_bar_back">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:src">@mipmap/back_icon</item>
    </style>
</resources>