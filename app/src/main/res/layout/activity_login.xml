<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:contentDescription="@string/login_login"
        android:scaleType="fitXY"
        android:src="@mipmap/login_bg" />

    <androidx.cardview.widget.CardView
        android:id="@+id/login_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/login_login"
            android:src="@mipmap/login_logo" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="255dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/login_login"
                android:textColor="#0f5dff"
                android:textSize="16sp" />

            <View
                android:layout_width="92dp"
                android:layout_height="2dp"
                android:background="#356bf2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/login_register"
                android:textColor="@color/black_tag"
                android:textSize="16sp" />

            <View
                android:layout_width="92dp"
                android:layout_height="2dp"
                android:background="#f5f5f5" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        style="@style/input"
        android:layout_marginTop="350dp"
        android:autofillHints=""
        android:hint="@string/login_mobile"
        android:inputType="phone"
        app:drawableLeftCompat="@mipmap/mobile" />

    <View
        style="@style/default_line"
        android:layout_marginStart="66dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="66dp"
        android:background="@color/black_tag" />

    <EditText
        style="@style/input"
        android:layout_marginTop="420dp"
        android:autofillHints=""
        android:hint="@string/login_password"
        android:inputType="textPassword"
        app:drawableLeftCompat="@mipmap/password" />

    <View
        style="@style/default_line"
        android:layout_marginStart="66dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="66dp"
        android:background="@color/black_tag" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/login_login"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="50dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:text="@string/login_forget"
        android:textColor="@color/black_tag"
        android:textSize="13sp" />
</RelativeLayout>